<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FBE8D1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.FirstActivity">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="#FBE8D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mediaItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="1"/>
    <!--  50% of parent height  -->
    <View android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#FBE8D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mediaItem"
        app:layout_constraintStart_toEndOf="@+id/fragmentContainerView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5"/>
    <!--  50% of parent height  -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mediaItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="#FBE8D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragmentContainerView5"
        app:layout_constraintStart_toEndOf="@+id/fragmentContainerView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="1"/>
    <!--  50% of parent height  -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:background="#FBE8D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mediaItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="1"/>
    <!--  50% of parent height  -->
</androidx.constraintlayout.widget.ConstraintLayout>